{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Core schema meta-schema (slightly modified for use in telemetry attributes --allan)",
  "definitions": {
    "schemaArray": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/definitions/json" }
    },
    "positiveInteger": {
      "type": "integer",
      "minimum": 0
    },
    "positiveIntegerDefault0": {
      "allOf": [ { "$ref": "#/definitions/json/definitions/positiveInteger" }, { "default": 0 } ]
    },
    "simpleTypes": {
      "enum": [ "array", "boolean", "integer", "null", "number", "object", "string" ]
    },
    "stringArray": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uri"
    },
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "default": {},
    "multipleOf": {
      "type": "number",
      "minimum": 0,
      "exclusiveMinimum": true
    },
    "maximum": {
      "type": "number"
    },
    "exclusiveMaximum": {
      "type": "boolean",
      "default": false
    },
    "minimum": {
      "type": "number"
    },
    "exclusiveMinimum": {
      "type": "boolean",
      "default": false
    },
    "maxLength": { "$ref": "#/definitions/json/definitions/positiveInteger" },
    "minLength": { "$ref": "#/definitions/json/definitions/positiveIntegerDefault0" },
    "pattern": {
      "type": "string",
      "format": "regex"
    },
    "additionalItems": {
      "anyOf": [
        { "type": "boolean" },
        { "$ref": "#/definitions/json" }
      ],
      "default": {}
    },
    "items": {
      "anyOf": [
        { "$ref": "#/definitions/json" },
        { "$ref": "#/definitions/json/definitions/schemaArray" }
      ],
      "default": {}
    },
    "maxItems": { "$ref": "#/definitions/json/definitions/positiveInteger" },
    "minItems": { "$ref": "#/definitions/json/definitions/positiveIntegerDefault0" },
    "uniqueItems": {
      "type": "boolean",
      "default": false
    },
    "maxProperties": { "$ref": "#/definitions/json/definitions/positiveInteger" },
    "minProperties": { "$ref": "#/definitions/json/definitions/positiveIntegerDefault0" },
    "required": { "$ref": "#/definitions/json/definitions/stringArray" },
    "additionalProperties": {
      "anyOf": [
        { "type": "boolean" },
        { "$ref": "#/definitions/json" }
      ],
      "default": {}
    },
    "definitions": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/json" },
      "default": {}
    },
    "properties": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/json" },
      "default": {}
    },
    "patternProperties": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/json" },
      "default": {}
    },
    "dependencies": {
      "type": "object",
      "additionalProperties": {
        "anyOf": [
          { "$ref": "#/definitions/json" },
          { "$ref": "#/definitions/json/definitions/stringArray" }
        ]
      }
    },
    "enum": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true
    },
    "type": {
      "anyOf": [
        { "$ref": "#/definitions/json/definitions/simpleTypes" },
        {
          "type": "array",
          "items": { "$ref": "#/definitions/json/definitions/simpleTypes" },
          "minItems": 1,
          "uniqueItems": true
        }
      ]
    },
    "allOf": { "$ref": "#/definitions/json/definitions/schemaArray" },
    "anyOf": { "$ref": "#/definitions/json/definitions/schemaArray" },
    "oneOf": { "$ref": "#/definitions/json/definitions/schemaArray" },
    "not": { "$ref": "#/definitions/json" },
    "name": {
      "type": "string"
    },
    "units": {
      "type": "string"
    }
  },
  "dependencies": {
    "exclusiveMaximum": [ "maximum" ],
    "exclusiveMinimum": [ "minimum" ]
  },
  "default": {},
  "additionalProperties": false
}
