# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                     controllers.Application.index

# Gets a list of top level ICD names
GET        /icdNames             controllers.Application.icdNames

# Gets the HTML for an ICD
GET        /icdHtml/:name        controllers.Application.icdHtml(name: String)

# Uploads ICD files from a selected directory
POST       /upload               controllers.FileUploadController.uploadFile

# Uploads ICD files from from a zip file of the ICD directory
POST       /uploadZip            controllers.FileUploadController.uploadZipFile

# Websocket to notify client when DB has changed
GET        /ws                   controllers.FileUploadController.ws

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file         controllers.Assets.at(path="/public", file)

GET        /webjars/*file        controllers.WebJarAssets.at(file)
