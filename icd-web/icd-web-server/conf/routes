# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                   controllers.Application.index

# Gets a list of top level subsystem names
GET         /subsystems                                         controllers.Application.subsystemNames

# Gets a list of components belonging to the given version of the given subsystem
GET         /components/:subsystem/:version                     controllers.Application.components(subsystem, version)

# Gets information about a given component in a iven version of the given subsystem
GET         /componentInfo/:subsystem/:version/:compName        controllers.Application.componentInfo(subsystem, version, compName)

# Gets the HTML for the given component
GET         /apiAsHtml/:name                                    controllers.Application.apiAsHtml(name: String)

# Gets the PDF for the given component
GET         /apiAsPdf/:name                                     controllers.Application.apiAsPdf(name: String)

# Gets the detailed information about the versions of a component or subsystem
GET         /versions/:name                                     controllers.Application.getVersions(name: String)

# Gets a list of version names for a component or subsystem
GET         /versionNames/:name                                 controllers.Application.getVersionNames(name: String)

# Uploads ICD files from a selected directory, all at once as multipart/formdata
POST        /uploadFiles                                        controllers.FileUploadController.uploadFiles

# Websocket to notify client when DB has changed
GET         /ws                                                 controllers.FileUploadController.ws

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                       controllers.Assets.at(path="/public", file)

GET         /webjars/*file                                      controllers.WebJarAssets.at(file)
