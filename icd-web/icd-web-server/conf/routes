# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                           controllers.Application.index

# Gets a list of top level ICD names
GET         /icdNames                   controllers.Application.icdNames

# Gets a list of components belonging to the given ICD
GET         /icdComponents/:name        controllers.Application.icdComponents(name)

# Gets information about a given ICD component
GET         /componentInfo/:name        controllers.Application.componentInfo(name)

# Gets the HTML for an ICD
GET         /icdHtml/:name              controllers.Application.icdHtml(name: String)

# Gets the PDF for an ICD
GET         /icdPdf/:name               controllers.Application.icdPdf(name: String)

# Gets the PDF for an ICD
GET         /versions/:name             controllers.Application.getVersions(name: String)

# Uploads ICD files from a selected directory, all at once as multipart/formdata
POST        /uploadFiles                controllers.FileUploadController.uploadFiles

# Websocket to notify client when DB has changed
GET         /ws                         controllers.FileUploadController.ws

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file               controllers.Assets.at(path="/public", file)

GET         /webjars/*file              controllers.WebJarAssets.at(file)
